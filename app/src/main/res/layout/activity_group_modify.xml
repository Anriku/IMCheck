<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.anriku.imcheck.MainInterface.View.GroupSet.GroupModifyActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ac_group_modify_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="新建群"
                android:textSize="@dimen/text_size" />

        </android.support.v7.widget.Toolbar>


        <EditText
            android:id="@+id/ac_group_modify_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的群名称"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/ac_group_modify_desc_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:hint="亲输入你的群描述"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/ac_group_modify_bt"
            android:layout_width="match_parent"
            android:text="完成"
            android:background="@drawable/ripple_backgroud_bt"
            android:layout_margin="@dimen/margin"
            android:layout_height="wrap_content" />

    </LinearLayout>


</layout>
