        <TextView
            android:id="@+id/ac_group_more_exit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="退出该群"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/ac_group_more_dissolve_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="解散该群"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/ac_group_more_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改群组的名称以及描述"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/ac_group_more_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="群组信息"
            android:textSize="@dimen/text_size" />

